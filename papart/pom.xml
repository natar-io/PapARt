        </dependency>

        <!--Processing core-->
        <dependency>
            <groupId>org.processing</groupId>
            <artifactId>core</artifactId>
            <version>3.3.7</version>
        </dependency>

        <!--Processing OpenGL-->
        <dependency>
            <groupId>org.jogamp.jogl</groupId>
